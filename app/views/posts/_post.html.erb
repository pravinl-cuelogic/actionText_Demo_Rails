<tr>
  <td><%= post_counter + 1 %></td>
  <td><%= post.id %></td>
  <td><%= post.title %></td>
  <td>
    <%= link_to("Edit", edit_post_path(post) , class: 'btn btn-primary', style: "color: #351010; display: inline") %>
    <%= link_to("Delete", post, class: 'btn btn-danger', method: :delete, data: { confirm: "Are you Sure ?" }, style: "display: inline;") %>
  </td>
</tr>