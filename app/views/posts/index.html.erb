<%= link_to("Add Post", new_post_path, class: 'btn btn-primary', style: "color: #351010;") %>

<% if @posts.present? %>
  <h1>Posts</h1>
  <table class="table table-bordered table-responsive">
    <thead>
      <th>S.No</th>
      <th>Id</th>
      <th>Title</th>
      <th>Body</th>
      <th>Avatar</th>
      <th>Actions</th>
    </thead>
    <tbody>
        <!-- <%= render @posts %> -->
        <% @posts.each_with_index do |post, index| %>
          <tr>
          	<td>
          		<%= index + 1 %>
          	</td>
          	<td>
          		<%= post.id %>
          	</td>
          	<td>
          		<%= post.title %>
          	</td>
          	<td>
          		<%= post.body %>
          	</td>
            <td>
            	<%= post.avatar.blank? ? "" : image_tag(post.avatar.variant(resize: "100x100")) %>
            </td>
            <td>
          		<%= link_to("Edit Post", edit_post_path(post), class: 'btn btn-primary', style: "color: #351010;") %>
          	</td>
          </tr>
        <% end %>
    </tbody>
  </table>
<% else %>
  <h2>No Posts Found !!</h2>
<% end %>
